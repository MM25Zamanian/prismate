{
  "name": "@prismate/core",
  "version": "0.1.0",
  "description": "Core foundation module for Prismate with advanced type safety and performance optimizations",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --sourcemap --clean --format esm,cjs --treeshake --minify",
    "dev": "tsup src/index.ts --dts --sourcemap --watch --format esm,cjs",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "change-case": "^5.4.4"
  },
  "devDependencies": {
    "@prismate/eslint-config": "workspace:*",
    "@prismate/typescript-config": "workspace:*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0"
  },
  "keywords": [
    "prisma",
    "orm",
    "typescript",
    "validation",
    "database",
    "core",
    "types",
    "utilities"
  ],
  "author": "Prismate Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
} 